{% extends 'base.html.twig' %}

{% block title %}Liste de Fichier{% endblock %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1><u> Liste des fichiers: </u></h1>
</div>


<table class="table table-secondary">
  <thead>
    <tr>
      <th scope="col">Nom du fichier</th>
      <th scope="col">date</th>
      <th scope="col">activ</th>
    </tr>
  </thead>

  <tbody>
  {% for un_document in lst_document %}
    <tr class="table-light">
      <th scope="row">{{ un_document.login }} </th>
      <td>{{ un_document.password }}</td> 
      <td> <a href="/supprimerFichier/{{ un_document.id }}" > <input type="button" class="btn btn-danger" value="Supprimer"> </a> </td>
    </tr>
  </tbody>
  {% endfor %}
</table>

{% endblock %}